# SentinelForge Environment Configuration
# Copy this file to .env and update with your actual values

# Email Configuration for Password Reset
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENTINELFORGE_FROM_EMAIL=no-reply@sentinelforge.com
SENTINELFORGE_FRONTEND_URL=http://localhost:3000

# Database Configuration
DATABASE_URL=sqlite:///ioc_store.db

# Security Configuration
SECRET_KEY=your_secret_key_here

# Optional: SMTP Configuration (alternative to SendGrid)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# SMTP_USE_TLS=true
